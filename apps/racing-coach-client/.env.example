# Racing Coach Client Configuration
# Copy this file to .env and modify as needed

# Server Configuration
SERVER_URL=http://localhost:8000

# Lap Processing
LAP_COMPLETION_THRESHOLD=95.0

# Telemetry Source
TELEMETRY_MODE=replay  # Options: live, replay
REPLAY_FILE_PATH=/path/to/your/telemetry.ibt
REPLAY_SPEED=20.0
REPLAY_LOOP=false

# Collection
COLLECTION_RATE_HZ=60

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_COLOR=true  # Enable colored console output
LOG_SHOW_MODULE=true  # Show module names in log output
