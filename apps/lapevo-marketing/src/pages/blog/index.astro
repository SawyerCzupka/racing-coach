---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import BlogCard from "@/components/BlogCard.astro";
import { getCollection } from "astro:content";

export const prerender = true;

const posts = (await getCollection("blog", ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout
  title="Blog"
  description="Insights, tutorials, and updates from the LapEvo team."
>
  <Header currentPath="/blog" />
  <main class="pt-24 pb-20">
    <div class="mx-auto max-w-4xl px-6">
      <!-- Header -->
      <div class="mb-12">
        <h1 class="text-3xl md:text-4xl font-bold mb-4">Blog</h1>
        <p class="text-lg text-muted-foreground">
          Insights, tutorials, and updates from the LapEvo team.
        </p>
      </div>

      <!-- Posts -->
      {
        posts.length > 0 ? (
          <div class="grid gap-6">
            {posts.map((post) => (
              <BlogCard post={post} />
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-muted-foreground">No posts yet. Check back soon!</p>
          </div>
        )
      }
    </div>
  </main>
  <Footer />
</BaseLayout>
