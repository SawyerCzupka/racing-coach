---
const comparisonPoints = [
  {
    feature: "Real-time telemetry capture",
    lapevo: true,
    motec: true,
    vrs: false,
  },
  {
    feature: "AI-powered coaching insights",
    lapevo: true,
    motec: false,
    vrs: true,
  },
  {
    feature: "iRacing native integration",
    lapevo: true,
    motec: false,
    vrs: true,
  },
  {
    feature: "Corner-by-corner analysis",
    lapevo: true,
    motec: true,
    vrs: true,
  },
  {
    feature: "Cloud storage & sync",
    lapevo: true,
    motec: false,
    vrs: true,
  },
  {
    feature: "Free tier available",
    lapevo: true,
    motec: false,
    vrs: false,
  },
];
---

<section class="py-20 md:py-32 bg-card/30">
  <div class="mx-auto max-w-6xl px-6">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        How LapEvo
        <span class="gradient-text">compares</span>
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        We combine the power of professional telemetry tools with modern AI and
        seamless iRacing integration.
      </p>
    </div>

    <!-- Comparison table -->
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-border">
            <th
              class="text-left py-4 pr-4 text-sm font-medium text-muted-foreground"
              >Feature</th
            >
            <th class="py-4 px-4 text-center">
              <div class="inline-flex items-center gap-2">
                <div
                  class="flex h-6 w-6 items-center justify-center rounded bg-linear-to-br from-blue-500 to-blue-700 text-xs font-bold text-white"
                >
                  L
                </div>
                <span class="text-sm font-semibold text-foreground">LapEvo</span
                >
              </div>
            </th>
            <th class="py-4 px-4 text-center">
              <span class="text-sm font-medium text-muted-foreground"
                >MoTeC</span
              >
            </th>
            <th class="py-4 px-4 text-center">
              <span class="text-sm font-medium text-muted-foreground">VRS</span>
            </th>
          </tr>
        </thead>
        <tbody>
          {
            comparisonPoints.map((point) => (
              <tr class="border-b border-border/50">
                <td class="py-4 pr-4 text-sm text-foreground">
                  {point.feature}
                </td>
                <td class="py-4 px-4 text-center">
                  {point.lapevo ? (
                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-500/20 text-green-400">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="3"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                    </span>
                  ) : (
                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-red-500/20 text-red-400">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="3"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M6 18L18 6M6 6l12 12"
                        />
                      </svg>
                    </span>
                  )}
                </td>
                <td class="py-4 px-4 text-center">
                  {point.motec ? (
                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-500/20 text-green-400">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="3"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                    </span>
                  ) : (
                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-red-500/20 text-red-400">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="3"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M6 18L18 6M6 6l12 12"
                        />
                      </svg>
                    </span>
                  )}
                </td>
                <td class="py-4 px-4 text-center">
                  {point.vrs ? (
                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-500/20 text-green-400">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="3"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                    </span>
                  ) : (
                    <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-red-500/20 text-red-400">
                      <svg
                        class="w-4 h-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="3"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M6 18L18 6M6 6l12 12"
                        />
                      </svg>
                    </span>
                  )}
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>

    <!-- Bottom CTA -->
    <div class="mt-12 text-center">
      <p class="text-sm text-muted-foreground mb-4">
        Join the waitlist and be among the first to experience LapEvo
      </p>
      <a
        href="#waitlist"
        class="inline-flex rounded-lg bg-linear-to-r from-blue-500 to-blue-600 px-6 py-3 text-sm font-medium text-white transition-all hover:from-blue-600 hover:to-blue-700"
      >
        Get Early Access
      </a>
    </div>
  </div>
</section>
