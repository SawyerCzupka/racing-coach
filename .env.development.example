# Racing Coach - Development Environment Configuration
# Copy this file to .env.development and update values as needed

# Database Configuration
# PostgreSQL connection string for the racing-coach-server
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@timescaledb:5432/postgres

# File Watching Configuration
# Force polling for file changes in Docker (required for hot-reload on some systems)
WATCHFILES_FORCE_POLLING=true

# API Configuration
# Backend API URL for the web dashboard
VITE_API_URL=http://localhost:8000

# Database Admin Configuration
# pgAdmin credentials for database management
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
